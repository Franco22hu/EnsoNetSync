<Window x:Class="EnsoNetSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnsoNetSync"
        mc:Ignorable="d"
        Title="Enso-Woocommerce .Net Sync" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <TextBox Name="textBox" 
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True" 
                 HorizontalScrollBarVisibility="Auto" Margin="0,0,10,45"
                 />
        <Button Content="Open Log" Margin="0,0,10,18" Click="Button_OpenLog_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button Name="forceButton" Content="Force Update" HorizontalAlignment="Left" Margin="10,0,0,15" Width="83" Click="Button_ForceUpdate_Click" FontWeight="Bold" Height="25" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
